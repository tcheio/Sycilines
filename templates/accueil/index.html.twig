  <label for="portdep">Port de départ:</label>
  <input type="text" id="portdep" name="portDep" required size="10">
  <label for="portArr">Port d'arrivée:</label>
  <input type="text" id="portArr" name="portArr" required size="10">
  <label for="dateDep">Date de départ</label>
  <input type="text" id="dateDep" name="dateDep"  required size="10">
